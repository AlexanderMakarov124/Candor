@model Candor.UseCases.Blog.Posts.CreatePost.CreatePostCommand

@{
    ViewData["Title"] = "Creating post";
}

<div class="d-flex align-items-center justify-content-center">
    @using (Html.BeginForm())
    {
        <div class="form-group">
            @Html.LabelFor(model => model.Title)
            @Html.TextBoxFor(model => model.Title, new { @class = "form-control post-form-element"} )
            @Html.ValidationMessageFor(model => model.Title)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Content)
            @Html.TextAreaFor(model => model.Content, new { @class = "form-control post-form-element" })
            @Html.ValidationMessageFor(model => model.Content)
        </div>

        <div class="form-check">
            @Html.CheckBoxFor(model => model.IsPublic, new { @class = "form-check-input" })
            @Html.LabelFor(model => model.IsPublic, "Public", new { @class = "form-check-label" })
        </div>

        <button class="btn btn-primary" type="submit">Create post</button>
    }
</div>