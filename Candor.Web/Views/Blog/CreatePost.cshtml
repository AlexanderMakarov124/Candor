@model Candor.UseCases.Blog.Posts.CreatePost.CreatePostCommand

@{
    ViewData["Title"] = "Creating post";
}

<div class="d-flex align-items-center justify-content-center">
    <form method="post" asp-action="CreatePost">
        <div class="form-group">
            <label asp-for="Title"></label>
            <input class="form-control post-form-element" type="text" value="TestTitle" asp-for="Title" />
            <span asp-validation-for="Title"></span>
        </div>

        <div class="form-group">
            <label asp-for="Content"></label>
            <textarea class="form-control post-form-element" asp-for="Content">Test content test content test content test content.</textarea>
            <span asp-validation-for="Content"></span>
        </div>
        
        <div class="form-check">
            <input class="form-check-input" asp-for="IsPublic"/>
            <label class="form-check-label" asp-for="IsPublic">Public</label>
        </div>

        <button class="btn btn-primary" type="submit">Create post</button>
    </form>
</div>